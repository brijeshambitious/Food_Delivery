<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/vendororderimage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ordershow" />

        <TextView
            android:id="@+id/orderid_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/vendororderimage"
            android:fontFamily="@font/overpass_semibold"
            android:text="Order Id:" />

        <TextView
            android:id="@+id/orderid_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/orderid_textview"
            android:fontFamily="@font/overpass_semibold"
            android:text="11716141" />

        <TextView
            android:id="@+id/orderitem_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderid_vendor"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/vendororderimage"
            android:fontFamily="@font/overpass_semibold"
            android:text="Order Items:" />

        <TextView
            android:id="@+id/orderitem_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderid_textview"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/orderitem_textview"
            android:fontFamily="@font/overpass_semibold"
            android:text="Pizza,Cheeze" />

        <TextView
            android:id="@+id/orderamount_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderitem_vendor"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/vendororderimage"
            android:fontFamily="@font/overpass_semibold"
            android:text="Amount(in Rs):" />

        <TextView
            android:id="@+id/orderamount_vendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderitem_vendor"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/orderamount_textview"
            android:fontFamily="@font/overpass_semibold"
            android:text="300" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="149dp"
            android:layout_marginEnd="76dp"
            android:layout_marginBottom="115dp"
            android:fontFamily="@font/overpass_semibold"
            android:text="Address: Ghaziabad" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>